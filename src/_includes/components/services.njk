<section id="services">
  <h2>Services</h2>
  <div class="grid">

    {% for item in services %}
      <div class="card">
        <img src="{{ item.image }}" alt="{{ item.title }}" />
        <div class="card-body">
          <h3>{{ item.title }}</h3>
          <p>{{ item.description }}</p>
        </div>
      </div>
    {% endfor %}

  </div>
</section>