<header class="hero">
  <div class="hero-inner">
    <h1 class="hero-h1">{{ home.hero_h1 }}</h1>
    <img class="hero-logo" src="{{ home.hero_image }}" alt="Valor Wave Entertainment Logo" />
    <div class="kicker">{{ home.hero_kicker }}</div>
    <div class="tagline">{{ home.hero_tagline }}</div>
    <div class="subline">{{ home.hero_subline }}</div>
    <a class="btn" href="{{ home.hero_button_link }}">{{ home.hero_button_text }}</a>
  </div>
</header>