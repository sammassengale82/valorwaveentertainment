<header class="site-header">
  <div class="header-inner">
    <a class="brand-mini" href="#top" aria-label="Go to top">
      <img src="{{ site.logo }}" alt="Valor Wave Entertainment">
      <span class="brand-text">{{ site.site_name }}</span>
    </a>

    <nav class="header-nav" aria-label="Primary">
      {% for item in navigation.links %}
        <a class="nav-link" href="{{ item.url }}">{{ item.label }}</a>
      {% endfor %}
    </nav>

    <!-- THEME TOGGLE BUTTONS -->
    <div class="theme-toggle" style="display:flex;gap:10px;margin-left:auto;">
      <button class="btn" onclick="setTheme('original')">Original</button>
      <button class="btn" onclick="setTheme('patriotic')">Patriotic</button>
      <button class="btn" onclick="setTheme('multicam')">Multicam</button>
    </div>
  </div>
</header>