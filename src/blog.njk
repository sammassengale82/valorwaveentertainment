---
layout: layout.njk
title: "Blog"
---

<section style="max-width:900px;margin:0 auto;padding:40px 20px;">
  <h2>Blog</h2>

  {% for post in collections.blog reversed %}
    <article style="margin-bottom:40px;">
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <p style="color:var(--gray);font-size:14px;">{{ post.date | date("MMMM d, yyyy") }}</p>
      {% if post.data.image %}
        <img src="{{ post.data.image }}" alt="" style="width:100%;border-radius:12px;margin:12px 0;">
      {% endif %}
      <p>{{ post.templateContent | truncate(200) }}</p>
      <a class="btn" href="{{ post.url }}">Read More</a>
    </article>
  {% endfor %}
</section>